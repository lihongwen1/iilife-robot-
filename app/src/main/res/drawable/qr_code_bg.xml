<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="1dp"
        android:bottom="1dp"
        android:right="1dp"
        android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_ff" /> <!--主体颜色-->
            <stroke android:width="1dp" android:color="@color/color_ff"/><!-- 描边，边框宽度、颜色 -->
            <corners android:radius="@dimen/dp_10"/> <!--边角弧度-->
        </shape>
    </item>
</layer-list>