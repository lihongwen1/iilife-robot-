<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="@color/clock_aty_tv_pressed"
                android:endColor="@color/clock_aty_tv_pressed" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:endColor="@color/color_f08300"
                    android:startColor="@color/color_f08300" />
            </shape>
        </clip>
    </item>
</layer-list>