<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        style="@style/Aty_top_rl_bg">
        <ImageView
            android:id="@+id/image_back"
            style="@style/Image_Back_Style"
            android:visibility="gone"/>
        <com.ilife.iliferobot_cn.view.RegularTextView
            style="@style/Text_16sp_33"
            android:id="@+id/tv_title"
            android:layout_centerInParent="true"
            android:text="@string/bind_suc_aty_suc"/>
    </RelativeLayout>
    <View style="@style/View_Line_Style"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.ilife.iliferobot_cn.view.RegularTextView
                style="@style/Text_16sp_33"
                android:id="@+id/tv_connected"
                android:layout_gravity="center_horizontal"
                android:text="@string/bind_suc_aty_done_800"
                android:layout_marginTop="@dimen/dp_30"/>
            <ImageView
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/n_icon_connected"
                android:layout_marginTop="@dimen/dp_26"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_194"
                android:background="@drawable/n_robot"/>
            <com.ilife.iliferobot_cn.view.LightTextView
                style="@style/Text_12sp_ac"
                android:text="@string/bind_suc_aty_name"
                android:layout_gravity="center_horizontal"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_40"
                android:background="@drawable/name_bt_bg"
                android:layout_marginTop="@dimen/dp_16">
                <EditText
                    android:id="@+id/et_devName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_33"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/bind_suc_sty_robot_name"/>
            </RelativeLayout>
            <com.ilife.iliferobot_cn.view.RegularButton
                style="@style/Button_Style"
                android:id="@+id/bt_done"
                android:layout_marginTop="@dimen/dp_100"
                android:text="@string/bind_suc_sty_robot_done"
                android:layout_marginBottom="@dimen/dp_20"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>