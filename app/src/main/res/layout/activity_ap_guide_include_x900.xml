<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4F5FA"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_ap_step1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <com.ilife.iliferobot.view.MediumTextView
            android:id="@+id/text_tip1"
            style="@style/Text_18sp_33"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="@string/ap_guide_aty_tip1_x900" />

        <com.ilife.iliferobot.view.GifView
            android:layout_marginTop="@dimen/dp_8"
            android:id="@+id/gif_open_key"
            android:layout_width="600px"
            android:layout_height="600px"
            app:gif="@drawable/gif_open_key" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ap_step2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <com.ilife.iliferobot.view.MediumTextView
            android:id="@+id/text_tip2"
            style="@style/Text_18sp_33"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="@string/ap_guide_aty_tip2_x900" />

        <com.ilife.iliferobot.view.GifView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/gif_click_wifi"
            android:layout_width="600px"
            android:layout_height="600px"
            app:gif="@drawable/gif_click_wifi" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_22"
        android:gravity="center"
        android:orientation="vertical">

        <com.ilife.iliferobot.view.RegularTextView
            android:visibility="invisible"
            android:id="@+id/tv_guide_tip4"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/ap_guide_tip4"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <com.ilife.iliferobot.view.ToggleRadioButton
            android:id="@+id/rb_next_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/ap_guide_already_open_device"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_16" />

        <com.ilife.iliferobot.view.ShadowContainer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            app:containerCornerRadius="@dimen/dp_25"
            app:containerDeltaLength="@dimen/dp_8"
            app:containerShadowColor="@color/color_f08300_66"
            app:containerShadowRadius="@dimen/dp_6"
            app:deltaY="@dimen/dp_2"
            app:enable="true">

            <com.ilife.iliferobot.view.RegularButton
                android:id="@+id/bt_next"
                style="@style/Button_Style_quick_login"
                android:text="@string/guide_aty_next" />
        </com.ilife.iliferobot.view.ShadowContainer>
    </LinearLayout>
</LinearLayout>