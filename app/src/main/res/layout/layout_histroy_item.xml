<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        style="@style/View_Line_Style"/>
    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@color/color_f6">
        <com.ilife.iliferobot_cn.view.RegularTextView
            style="@style/Text_16sp_33"
            android:id="@+id/tv_date"
            android:text="06月11日"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginStart="@dimen/dp_30"/>
        <com.ilife.iliferobot_cn.view.LightTextView
            style="@style/Text_12sp_ac"
            android:id="@+id/tv_time"
            android:layout_below="@+id/tv_date"
            android:layout_alignStart="@+id/tv_date"
            android:layout_marginTop="@dimen/dp_7"
            android:text="17:17"/>
        <LinearLayout
            android:layout_width="@dimen/dp_172"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.ilife.iliferobot_cn.view.MediumTextView
                    style="@style/Text_14sp_f08300"
                    android:id="@+id/tv_area"
                    android:text="68㎡"
                    android:layout_marginTop="@dimen/dp_23"
                    android:layout_centerHorizontal="true"/>
                <com.ilife.iliferobot_cn.view.LightTextView
                    style="@style/Text_10sp_33"
                    android:id="@+id/tv_area_"
                    android:text="@string/setting_aty_area"
                    android:layout_below="@+id/tv_area"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <View
                android:id="@+id/view"
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_25"
                android:background="@color/all_line"
                />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.ilife.iliferobot_cn.view.MediumTextView
                    style="@style/Text_14sp_f08300"
                    android:id="@+id/tv_duration"
                    android:text="60min"
                    android:layout_marginTop="@dimen/dp_23"
                    android:layout_centerHorizontal="true"/>
                <com.ilife.iliferobot_cn.view.LightTextView
                    style="@style/Text_10sp_33"
                    android:id="@+id/tv_duration_"
                    android:text="@string/setting_aty_duration"
                    android:layout_below="@+id/tv_duration"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        style="@style/View_Line_Style"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10" />
</LinearLayout>