<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/template_top_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_avatar"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/n_icon_portrait" />

        <com.ilife.iliferobot.view.RegularTextView
            android:id="@+id/tv_userName"
            style="@style/Text_16sp_33"
            android:layout_below="@+id/image_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginBottom="@dimen/dp_9"
            android:padding="@dimen/dp_5"
            android:text="@string/personal_aty_set_name" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_help"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/image_help"
                    style="@style/Image_Style_30"
                    android:background="@drawable/n_icon_help" />

                <TextView
                    style="@style/Text_16sp_33"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_toEndOf="@+id/image_help"
                    android:text="@string/personal_aty_help"
                    android:textColor="@color/color_33" />

                <ImageView style="@style/Image_Style_Forward" />
            </RelativeLayout>

            <View
                style="@style/View_Line_Style"
                android:layout_marginStart="@dimen/dp_70" />

            <RelativeLayout
                android:id="@+id/rl_scan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/image_scan"
                    style="@style/Image_Style_30"
                    android:background="@drawable/n_icon_scan" />

                <com.ilife.iliferobot.view.RegularTextView
                    style="@style/Text_16sp_33"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_toEndOf="@+id/image_scan"
                    android:text="@string/personal_aty_scan"
                    android:textColor="@color/color_33" />

                <ImageView style="@style/Image_Style_Forward" />
            </RelativeLayout>

            <View
                style="@style/View_Line_Style"
                android:layout_marginStart="@dimen/dp_70" />

            <RelativeLayout
                android:id="@+id/rl_share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/image_share"
                    style="@style/Image_Style_30"
                    android:background="@drawable/n_icon_shared" />

                <com.ilife.iliferobot.view.RegularTextView
                    style="@style/Text_16sp_33"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_toEndOf="@+id/image_share"
                    android:text="@string/personal_aty_share"
                    android:textColor="@color/color_33" />

                <ImageView
                    android:id="@+id/image_forward"
                    style="@style/Image_Style_Forward" />
            </RelativeLayout>

            <View
                style="@style/View_Line_Style"
                android:layout_marginStart="@dimen/dp_70" />

            <LinearLayout
                android:id="@+id/ll_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_f6"
                android:orientation="vertical"
                android:visibility="gone" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_protocol"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/image_protocol"
                    style="@style/Image_Style_30"
                    android:background="@drawable/n_icon_protocol" />

                <com.ilife.iliferobot.view.RegularTextView
                    style="@style/Text_16sp_33"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_toStartOf="@+id/image_forward_policy"
                    android:layout_toEndOf="@+id/image_protocol"
                    android:text="@string/user_agreement"
                    android:textColor="@color/color_33" />

                <ImageView
                    android:id="@+id/image_forward_policy"
                    style="@style/Image_Style_Forward" />
            </RelativeLayout>


            <View
                style="@style/View_Line_Style"
                android:layout_marginStart="@dimen/dp_70" />

            <RelativeLayout
                android:id="@+id/rl_delete_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_delete_account"
                    style="@style/Image_Style_30"
                    android:background="@drawable/n_icon_delete_account" />

                <com.ilife.iliferobot.view.RegularTextView
                    style="@style/Text_16sp_33"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_toEndOf="@+id/iv_delete_account"
                    android:text="@string/personal_acy_del"
                    android:textColor="@color/color_33" />

                <ImageView style="@style/Image_Style_Forward" />
            </RelativeLayout>


            <View
                style="@style/View_Line_Style"
                android:layout_marginStart="@dimen/dp_70" />

            <RelativeLayout
                android:id="@+id/rl_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/image_logout"
                    style="@style/Image_Style_30"
                    android:background="@drawable/n_icon_logout" />

                <com.ilife.iliferobot.view.RegularTextView
                    style="@style/Text_16sp_33"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_toEndOf="@+id/image_logout"
                    android:text="@string/personal_acy_exit"
                    android:textColor="@color/color_33" />

                <ImageView style="@style/Image_Style_Forward" />
            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_23">

                <ImageView
                    android:id="@+id/image_version"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerVertical="true"
                    android:background="@drawable/n_icon_version" />

                <com.ilife.iliferobot.view.LightTextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_toEndOf="@+id/image_version"
                    android:text="@string/personal_aty_version"
                    android:textColor="@color/color_ac" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_24"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_aty_protocol_agreement"
                    android:textColor="@color/color_f08300"
                    android:textSize="@dimen/dp_14" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:background="@color/color_ac" />

                <TextView
                    android:id="@+id/tv_protocol_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_aty_protocol_privacy"
                    android:textColor="@color/color_f08300"
                    android:textSize="@dimen/dp_14" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>