<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_top"
        layout="@layout/template_top_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_gradient_map_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.ilife.iliferobot_cn.view.LightTextView
                    android:id="@+id/tv_1"
                    style="@style/Text_10sp_ff"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/map_aty_status" />

                <com.ilife.iliferobot_cn.view.RegularTextView
                    android:id="@+id/tv_status"
                    style="@style/Text_14sp_ff"
                    android:layout_below="@+id/tv_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_7"
                    android:singleLine="true"
                    android:text="@string/map_aty_standby_mode" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.ilife.iliferobot_cn.view.LightTextView
                    android:id="@+id/tv_2"
                    style="@style/Text_10sp_ff"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/setting_aty_area" />

                <com.ilife.iliferobot_cn.view.RegularTextView
                    android:id="@+id/tv_area"
                    style="@style/Text_14sp_ff"
                    android:layout_below="@+id/tv_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text="@string/map_aty_gang" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.ilife.iliferobot_cn.view.LightTextView
                    android:id="@+id/tv_3"
                    style="@style/Text_10sp_ff"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/map_aty_time" />

                <com.ilife.iliferobot_cn.view.RegularTextView
                    android:id="@+id/tv_time"
                    style="@style/Text_14sp_ff"
                    android:layout_below="@+id/tv_3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text="@string/map_aty_gang" />
            </RelativeLayout>
        </LinearLayout>

        <!--中间地图布局-->
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.ilife.iliferobot_cn.view.MapView
                android:id="@+id/v_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />

            <include
                layout="@layout/layout_virtual_wall"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_16"
                android:visibility="gone" />

            <include
                android:id="@+id/layout_clean"
                layout="@layout/layout_clean"
                android:visibility="gone" />

            <include
                android:id="@+id/layout_recharge"
                layout="@layout/layout_recharge"
                android:visibility="gone" />

            <include
                android:id="@+id/layout_key_point"
                layout="@layout/layout_key_point"
                android:visibility="gone" />

            <include
                android:id="@+id/layout_along"
                layout="@layout/layout_along"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image_ele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginEnd="@dimen/dp_30" />

            <com.ilife.iliferobot_cn.view.LightTextView
                android:id="@+id/tv_use_control"
                style="@style/Text_14sp_f08300"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_30"
                android:paddingBottom="@dimen/dp_2"
                android:text="@string/map_aty_use_control"
                android:visibility="gone" />
        </RelativeLayout>


        <!--底部操作按钮布局-->
        <FrameLayout
            android:id="@+id/fl_bottom_x9"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_154"
            android:background="@color/white"
            android:paddingBottom="@dimen/dp_30"
            android:visibility="visible">

            <com.ilife.iliferobot_cn.view.RegularTextView
                android:id="@+id/tv_virtual_wall_x9"
                style="@style/Text_14sp_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/dp_40"
                android:drawableTop="@drawable/n_wall_enable"
                android:drawablePadding="@dimen/dp_16"
                android:gravity="center"
                android:text="@string/map_virtual_wall" />


            <com.ilife.iliferobot_cn.view.RegularTextView
                android:id="@+id/tv_start_x9"
                style="@style/Text_14sp_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:drawableTop="@drawable/image_start_bg"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:text="@string/map_aty_start" />

            <com.ilife.iliferobot_cn.view.RegularTextView
                android:id="@+id/tv_control_x9"
                style="@style/Text_14sp_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/dp_40"
                android:drawableTop="@drawable/n_btn_control"
                android:drawablePadding="@dimen/dp_16"
                android:gravity="center"
                android:text="@string/map_aty_remote" />

            <com.ilife.iliferobot_cn.view.RegularTextView
                android:id="@+id/tv_close_x9"
                style="@style/Text_14sp_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/selector_operaation_close"
                android:drawablePadding="@dimen/dp_16"
                android:gravity="center"
                android:visibility="gone" />
        </FrameLayout>

        <!--底部沿边 重点 预约-->
        <FrameLayout
            android:id="@+id/fl_control_x9"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_154"
            android:background="@color/white"
            android:paddingBottom="@dimen/dp_36"
            android:visibility="gone">

            <com.ilife.iliferobot_cn.view.RegularTextView
                android:id="@+id/tv_along_x9"
                style="@style/Text_14sp_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/dp_60"
                android:drawableTop="@drawable/image_along_bg"
                android:drawablePadding="@dimen/dp_16"
                android:gravity="center"
                android:text="@string/map_aty_along" />

            <com.ilife.iliferobot_cn.view.RegularTextView
                android:id="@+id/tv_point_x9"
                style="@style/Text_14sp_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:drawableTop="@drawable/image_point_bg"
                android:drawablePadding="@dimen/dp_16"
                android:gravity="center"
                android:text="@string/map_aty_point" />

            <com.ilife.iliferobot_cn.view.RegularTextView

                android:id="@+id/tv_appointment_x9"
                style="@style/Text_14sp_33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/dp_60"
                android:drawableTop="@drawable/image_clock_bg"
                android:drawablePadding="@dimen/dp_16"
                android:gravity="center"
                android:text="@string/map_aty_appoint" />

            <ImageView
                android:id="@+id/iv_control_close_x9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_14"
                android:src="@drawable/operation_icon_closed" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_recharge_x9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white"
                android:gravity="center"
                android:text="返回充电座"
                android:textColor="#ff1b92e2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_end_cleaning_x9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/white"
                android:gravity="center"
                android:text="结束当前清扫"
                android:textColor="#ff1b92e2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_cancel_x9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_f08300"
                android:textSize="16sp" />
        </LinearLayout>

        <FrameLayout
            android:background="@color/white"
            android:id="@+id/fl_virtual_wall"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_154"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_ensure_virtual_x9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:text="确认"
                android:textColor="#ff8fc31f"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_cancel_virtual_x9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:text="取消"
                android:textColor="#ff8fc31f"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_add_virtual_x9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_100"
                android:drawableTop="@drawable/n_image_add"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:text="添加"
                android:textColor="#ff333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_delete_virtual_x9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginEnd="@dimen/dp_100"
                android:drawableTop="@drawable/n_image_delete"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:text="删减"
                android:textColor="#ff333333"
                android:textSize="14sp" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>