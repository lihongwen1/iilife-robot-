<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_recharge_stand"
        android:layout_marginTop="@dimen/dp_74"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/recharge_stand" />
    <ImageView
        android:layout_marginTop="-24dp"
        android:id="@+id/image_animation"
        android:background="@drawable/recharge_animation_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_recharge_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/rechage_device_x900" />

</LinearLayout>