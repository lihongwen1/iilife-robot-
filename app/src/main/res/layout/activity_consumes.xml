<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout style="@style/Aty_top_rl_bg">

        <ImageView
            android:id="@+id/image_back"
            style="@style/Image_Back_Style" />

        <com.ilife.iliferobot_cn.view.RegularTextView
            style="@style/Text_14sp_33"
            android:layout_centerInParent="true"
            android:text="@string/setting_aty_consume_detail" />
    </RelativeLayout>

    <View style="@style/View_Line_Style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/color_f6">

        <com.ilife.iliferobot_cn.view.LightTextView
            style="@style/Text_14sp_33"
            android:text="@string/consume_aty_tips"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_30" />
    </RelativeLayout>

    <View style="@style/View_Line_Style" />

    <RelativeLayout
        android:id="@+id/rl_side"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/rl_top_back"
        android:clickable="true">

        <ImageView
            android:id="@+id/image_side"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_42"
            android:background="@drawable/n_icon_bianshua"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_30" />

        <com.ilife.iliferobot_cn.view.LightTextView
            style="@style/Text_14sp_33"
            android:id="@+id/tv_side"
            android:layout_toEndOf="@+id/image_side"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_marginStart="@dimen/dp_17"
            android:text="@string/consume_aty_side_time" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_side"
            android:layout_below="@+id/tv_side">

            <ProgressBar
                android:id="@+id/pb_side"
                android:layout_width="190dp"
                android:layout_height="2dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/progress_bg"
                android:max="100" />

            <TextView
                android:id="@+id/tv_percent_side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pb_side"
                android:layout_toEndOf="@+id/pb_side"
                android:layout_marginStart="10dp" />
        </RelativeLayout>
    </RelativeLayout>

    <View style="@style/View_Line_Style" />

    <RelativeLayout
        android:id="@+id/rl_roll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/rl_top_back"
        android:clickable="true">

        <ImageView
            android:id="@+id/image_roll"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_22"
            android:background="@drawable/n_icon_gunshua"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_30" />

        <com.ilife.iliferobot_cn.view.LightTextView
            android:id="@+id/tv_roll"
            style="@style/Text_14sp_33"
            android:text="@string/consume_aty_roll_time"
            android:layout_marginStart="@dimen/dp_17"
            android:layout_toEndOf="@+id/image_roll"
            android:layout_marginTop="@dimen/dp_26" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_roll"
            android:layout_below="@+id/tv_roll">

            <ProgressBar
                android:id="@+id/pb_roll"
                android:layout_width="190dp"
                android:layout_height="2dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/progress_bg"
                android:max="100" />

            <TextView
                android:id="@+id/tv_percent_roll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pb_roll"
                android:layout_toEndOf="@+id/pb_roll"
                android:layout_marginStart="10dp" />
        </RelativeLayout>
    </RelativeLayout>

    <View style="@style/View_Line_Style" />

    <RelativeLayout
        android:id="@+id/rl_filter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/rl_top_back"
        android:clickable="true">

        <ImageView
            android:id="@+id/image_filter"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/n_icon_lvwang"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_30" />

        <com.ilife.iliferobot_cn.view.LightTextView
            style="@style/Text_14sp_33"
            android:id="@+id/tv_filter"
            android:text="@string/consume_aty_filter_time"
            android:layout_marginStart="@dimen/dp_17"
            android:textSize="@dimen/sp_14"
            android:layout_toEndOf="@+id/image_filter"
            android:layout_marginTop="@dimen/dp_26" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_filter"
            android:layout_below="@+id/tv_filter">

            <ProgressBar
                android:id="@+id/pb_filter"
                android:layout_width="190dp"
                android:layout_height="2dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/progress_bg"
                android:max="100" />

            <TextView
                android:id="@+id/tv_percent_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pb_filter"
                android:layout_toEndOf="@+id/pb_filter"
                android:layout_marginStart="10dp" />
        </RelativeLayout>
    </RelativeLayout>

    <View style="@style/View_Line_Style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15">

        <com.ilife.iliferobot_cn.view.LightTextView
            android:id="@+id/tv_1"
            style="@style/Text_12sp_ac"
            android:layout_centerVertical="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consume_aty_text_1" />

        <com.ilife.iliferobot_cn.view.LightTextView
            android:layout_toEndOf="@+id/tv_1"
            style="@style/Text_12sp_ac"
            android:layout_marginStart="@dimen/dp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consume_aty_text_2" />
    </RelativeLayout>
    <!--<com.ilife.iliferobot.view.LightTextView-->

    <!--android:layout_marginTop="@dimen/dp_17"-->
    <!--android:layout_marginStart="@dimen/dp_30"-->
    <!--android:layout_marginEnd="@dimen/dp_30"-->
    <!--android:text="@string/consume_aty_hint"/>-->
</LinearLayout>