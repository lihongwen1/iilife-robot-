<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/template_top_title" />

    <LinearLayout
        android:id="@+id/rl_side"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="1dp"
        android:background="@drawable/rl_top_back"
        android:clickable="true"
        android:paddingStart="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_30">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/n_icon_bianshua" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_side"
                style="@style/Text_14sp_33"
                android:text="@string/consume_aty_side_time" />

            <ProgressBar
                android:id="@+id/pb_side"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_below="@id/tv_side"
                android:layout_alignStart="@id/tv_side"
                android:layout_marginTop="@dimen/dp_6"
                android:max="100"
                android:progressDrawable="@drawable/progress_bg" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_percent_side"
            style="@style/Text_14sp_33"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_38" />
    </LinearLayout>

    <View style="@style/View_Line_Style" />

    <LinearLayout
        android:id="@+id/rl_roll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/rl_top_back"
        android:clickable="true"
        android:paddingStart="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_30">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/n_icon_gunshua" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_roll"
                style="@style/Text_14sp_33"
                android:text="@string/consume_aty_roll_time_a9" />

            <ProgressBar
                android:id="@+id/pb_roll"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_below="@id/tv_roll"
                android:layout_alignLeft="@id/tv_roll"
                android:layout_marginTop="@dimen/dp_6"
                android:max="100"
                android:progressDrawable="@drawable/progress_bg" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_percent_roll"
            style="@style/Text_14sp_33"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_38" />
    </LinearLayout>

    <View style="@style/View_Line_Style" />

    <LinearLayout
        android:id="@+id/rl_filter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@drawable/rl_top_back"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_30">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/n_icon_lvwang" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_filter"
                style="@style/Text_14sp_33"
                android:text="@string/consume_aty_filter_time"
                android:textSize="@dimen/sp_14" />

            <ProgressBar
                android:id="@+id/pb_filter"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_below="@id/tv_filter"
                android:layout_alignLeft="@id/tv_filter"
                android:layout_marginTop="@dimen/dp_6"
                android:max="100"
                android:progressDrawable="@drawable/progress_bg" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_percent_filter"
            style="@style/Text_14sp_33"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_38" />
    </LinearLayout>


    <View style="@style/View_Line_Style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/color_f6">

        <com.ilife.iliferobot.view.LightTextView
            style="@style/Text_16sp_ac"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_30"
            android:text="@string/consume_aty_tips" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_30">

        <com.ilife.iliferobot.view.LightTextView
            android:id="@+id/tv_1"
            style="@style/Text_12sp_33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:text="@string/consume_aty_text_2" />
    </RelativeLayout>
    <!--<com.ilife.iliferobot.view.LightTextView-->

    <!--android:layout_marginTop="@dimen/dp_17"-->
    <!--android:layout_marginStart="@dimen/dp_30"-->
    <!--android:layout_marginEnd="@dimen/dp_30"-->
    <!--android:text="@string/consume_aty_hint"/>-->
</LinearLayout>