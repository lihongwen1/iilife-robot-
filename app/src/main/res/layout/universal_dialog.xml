<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qr_code_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_92">
        <com.ilife.iliferobot_cn.view.MediumTextView
            style="@style/Text_16sp_33"
            android:id="@+id/tv_dialog_title"
            android:text="@string/open_gps_location"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20" />
        <com.ilife.iliferobot_cn.view.LightTextView
            style="@style/Text_14sp_ac"
            android:id="@+id/tv_dialog_hint_tip"
            android:hint="@string/open_gps_location_tip"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/tv_dialog_title"
            android:layout_marginTop="@dimen/dp_10" />
        <com.ilife.iliferobot_cn.view.MediumTextView
            android:visibility="gone"
            style="@style/Text_16sp_33"
            android:id="@+id/tv_mid_title"
            android:text=""
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <View
        style="@style/View_Line_Style"
        android:layout_marginStart="@dimen/dp_1"
        android:layout_marginEnd="@dimen/dp_1"/>
    <LinearLayout
        android:id="@+id/ll_normal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:orientation="horizontal">
        <com.ilife.iliferobot_cn.view.RegularTextView
            android:id="@+id/tv_dialog_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_f08300"
            android:text="@string/personal_aty_cancel"
            android:includeFontPadding="false"
            android:gravity="center"/>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_2"
            android:background="@color/bg_color_f5f7fa"
            />
        <com.ilife.iliferobot_cn.view.RegularTextView
            android:id="@+id/tv_dialog_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_595757"
            android:text="@string/dialog_del_confirm"
            android:includeFontPadding="false"
            android:gravity="center" />
    </LinearLayout>
    <com.ilife.iliferobot_cn.view.RegularTextView
        android:visibility="gone"
        android:id="@+id/tv_dialog_mid"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_f08300"
        android:text="@string/dialog_del_confirm"
        android:includeFontPadding="false"
        android:gravity="center" />
</LinearLayout>