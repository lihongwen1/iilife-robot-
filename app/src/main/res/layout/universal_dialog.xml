<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/qr_code_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dialog_title"
            style="@style/Text_16sp_33"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/open_gps_location"
            android:textStyle="bold" />

        <com.ilife.iliferobot.view.MediumEditTextView
            android:enabled="false"
            android:id="@+id/et_dialog_hint_tip"
            style="@style/EditText_14sp_ac"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:layout_below="@+id/tv_dialog_title"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_30"
            android:gravity="center"
            android:hint="@string/open_gps_location_tip" />

        <com.ilife.iliferobot.view.MediumTextView
            android:id="@+id/tv_mid_title"
            style="@style/Text_16sp_33"
            android:layout_centerInParent="true"
            android:text=""
            android:visibility="gone" />
    </RelativeLayout>

    <View
        style="@style/View_Line_Style"
        android:layout_marginStart="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_1" />

    <LinearLayout
        android:id="@+id/ll_normal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:orientation="horizontal">

        <com.ilife.iliferobot.view.RegularTextView
            android:id="@+id/tv_dialog_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/personal_aty_cancel"
            android:textColor="@color/color_f08300"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_2"
            android:background="@color/bg_color_f5f7fa" />

        <com.ilife.iliferobot.view.RegularTextView
            android:id="@+id/tv_dialog_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/dialog_del_confirm"
            android:textColor="@color/color_595757"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <com.ilife.iliferobot.view.RegularTextView
        android:id="@+id/tv_dialog_mid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/dialog_del_confirm"
        android:textColor="@color/color_595757"
        android:textSize="@dimen/sp_16"
        android:visibility="gone" />
</LinearLayout>