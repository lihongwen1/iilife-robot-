<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout style="@style/Aty_top_rl_bg">

        <ImageView
            android:id="@+id/image_back"
            style="@style/Image_Back_Style" />

        <com.ilife.iliferobot_cn.view.RegularTextView
            android:id="@+id/tv_title"
            style="@style/Text_14sp_33"
            android:layout_centerInParent="true"
            android:text="@string/ap_guide_aty_ap" />
    </RelativeLayout>

    <View style="@style/View_Line_Style" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <include layout="@layout/activity_ap_guide_include" />
    </ScrollView>
</LinearLayout>