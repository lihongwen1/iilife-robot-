<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qr_code_bg"
    android:orientation="vertical">

    <com.ilife.iliferobot.view.RegularTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="center"
        android:textSize="16sp"
        android:text="@string/clock_aty_set_time"
        android:textColor="@color/color_33" />

    <View
        style="@style/View_Line_Style"
        android:layout_marginStart="@dimen/dp_1"
        android:layout_marginEnd="@dimen/dp_1" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_203"
        android:theme="@style/Theme.picker"
        android:timePickerMode="spinner" />

    <View
        style="@style/View_Line_Style"
        android:layout_marginStart="@dimen/dp_1"
        android:layout_marginEnd="@dimen/dp_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48">

        <com.ilife.iliferobot.view.RegularTextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/personal_aty_cancel"
            android:textColor="@color/color_33"
            android:textSize="16sp" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_2"
            android:background="@color/color_e2" />

        <com.ilife.iliferobot.view.RegularTextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dialog_del_confirm"
            android:textColor="@color/color_ef8200"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>