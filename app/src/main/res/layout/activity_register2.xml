<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout style="@style/Aty_top_rl_bg">

        <ImageView
            style="@style/Image_Back_Style"
            android:id="@+id/image_back" />

        <com.ilife.iliferobot_cn.view.RegularTextView
            style="@style/Text_14sp_33"
            android:id="@+id/tv_title"
            android:text="@string/login_aty_register"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <View style="@style/View_Line_Style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/color_f6">

        <ImageView
            android:id="@+id/image_email"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_30"
            android:background="@drawable/n_icon_email" />

        <com.ilife.iliferobot_cn.view.LightEditText
            style="@style/Edit_Style"
            android:id="@+id/et_email"
            android:layout_toEndOf="@+id/image_email"
            android:layout_marginStart="@dimen/dp_19"
            android:hint="@string/login_aty_email"
            android:textSize="@dimen/sp_14"
            android:textColorHint="@color/color_ac"
            android:textColor="@color/color_33" />
    </RelativeLayout>

    <View style="@style/View_Line_Style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <ImageView
            android:id="@+id/image_code"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_33"
            android:background="@drawable/n_icon_code" />

        <com.ilife.iliferobot_cn.view.LightEditText
            style="@style/EditText_14sp_ac"
            android:layout_height="match_parent"
            android:id="@+id/et_code"
            android:layout_toEndOf="@+id/image_code"
            android:layout_marginStart="@dimen/dp_22"
            android:hint="@string/register2_input_code"
            android:layout_toStartOf="@+id/tv_gain"
            android:gravity="center|start" />

        <com.ilife.iliferobot_cn.view.LightTextView
            android:id="@+id/tv_gain"
            android:layout_width="@dimen/dp_130"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@color/color_f08300"
            android:text="@string/register2_gain_code"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_ff"
            android:gravity="center"
            android:layout_margin="@dimen/dp_1"
            android:lineSpacingExtra="@dimen/dp_4" />
    </RelativeLayout>

    <View style="@style/View_Line_Style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <ImageView
            android:id="@+id/image_pw1"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_33"
            android:background="@drawable/n_icon_password" />

        <com.ilife.iliferobot_cn.view.LightEditText
            style="@style/EditText_14sp_ac"
            android:id="@+id/et_pw1"
            android:layout_toEndOf="@+id/image_pw1"
            android:layout_marginStart="@dimen/dp_22"
            android:hint="@string/register2_input_pass"
            android:layout_toStartOf="@+id/image_show_1" />

        <ImageView
            android:id="@+id/image_show_1"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginEnd="32dp"
            android:background="@drawable/selector_image_show"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <View style="@style/View_Line_Style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <ImageView
            android:id="@+id/image_pw2"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_33"
            android:background="@drawable/n_icon_confirm" />

        <com.ilife.iliferobot_cn.view.LightEditText
            style="@style/EditText_14sp_ac"
            android:id="@+id/et_pw2"
            android:layout_toEndOf="@+id/image_pw2"
            android:layout_marginStart="@dimen/dp_22"
            android:hint="@string/register2_input_pass_again"
            android:layout_toStartOf="@+id/image_show_2" />

        <ImageView
            android:id="@+id/image_show_2"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginEnd="32dp"
            android:background="@drawable/selector_image_show"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <View style="@style/View_Line_Style" />

    <com.ilife.iliferobot_cn.view.RegularButton
        style="@style/Button_Style"
        android:id="@+id/bt_confirm"
        android:layout_marginTop="@dimen/dp_40"
        android:text="@string/dialog_del_confirm" />
</LinearLayout>