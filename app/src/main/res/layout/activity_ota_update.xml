<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/template_top_title"
        />
    <View style="@style/View_Line_Style" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.ilife.iliferobot_cn.view.LightTextView
            style="@style/Text_12sp_33"
            android:id="@+id/tv_suc"
            android:text="@string/ota_aty_update_suc"
            android:layout_centerInParent="true"
            android:visibility="gone" />
        <RelativeLayout
            android:id="@+id/rl_progress"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ota_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/ota_aty_updating"
                android:textSize="17sp" />
            <ProgressBar
                android:progress="0"
                android:max="100"
                android:id="@+id/progressBar"
                android:progressDrawable="@drawable/progressbar_horizontal_long"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="200dp"
                android:layout_height="4dp"
                android:layout_below="@+id/ota_title"
                android:layout_marginTop="20dp" />
            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ota_title"
                android:layout_toEndOf="@+id/progressBar"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/tv_normal"
                android:textSize="15sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_version"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.ilife.iliferobot_cn.view.LightTextView
                android:id="@+id/tv_cur_version"
                style="@style/Text_12sp_33"
                android:text="@string/ota_aty_cur" />

            <com.ilife.iliferobot_cn.view.LightTextView
                android:id="@+id/tv_tar_version"
                style="@style/Text_12sp_33"
                android:layout_below="@+id/tv_cur_version"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:text="@string/ota_aty_tar" />
        </RelativeLayout>
        <com.ilife.iliferobot_cn.view.RegularButton
            style="@style/Button_Style"
            android:id="@+id/btn_update"
            android:text="@string/ota_aty_update"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"/>
    </RelativeLayout>
</LinearLayout>