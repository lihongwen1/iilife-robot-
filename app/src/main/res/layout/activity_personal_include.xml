<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ilife.iliferobot.view.RegularTextView
        style="@style/Text_16sp_33"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginStart="@dimen/dp_30"
        android:gravity="center_vertical"
        android:text="@string/personal_aty_support"
        android:textColor="@color/color_33" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_area_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="德国"
                android:textColor="@color/color_33"
                android:textSize="@dimen/dp_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:background="@drawable/help_icon_xiala" />
        </LinearLayout>

    <View style="@style/View_Line_Style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_tel1_all"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginStart="@dimen/dp_30"
                android:background="@drawable/n_icon_tel" />

            <com.ilife.iliferobot.view.AvantGardTextView
                android:id="@+id/tv_telNum"
                style="@style/Text_14sp_33"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_toEndOf="@+id/image_tel1_all"
                android:text="400-963-8886" />

            <com.ilife.iliferobot.view.LightTextView
                android:id="@+id/tv_phone_time_pre"
                style="@style/Text_12sp_33"
                android:layout_alignTop="@id/tv_telNum"
                android:layout_toRightOf="@id/tv_telNum" />

            <com.ilife.iliferobot.view.LightTextView
                android:id="@+id/tv_phone_time"
                style="@style/Text_12sp_33"
                android:layout_below="@id/tv_telNum"
                android:layout_alignStart="@id/tv_telNum"
                android:text="@string/help_aty_time1" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/area_contact2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_tel1_all2"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginStart="@dimen/dp_30"
                android:background="@drawable/n_icon_tel" />

            <com.ilife.iliferobot.view.AvantGardTextView
                android:id="@+id/tv_telNum2"
                style="@style/Text_14sp_33"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_toEndOf="@+id/image_tel1_all2"
                android:text="400-963-8886" />

            <com.ilife.iliferobot.view.LightTextView
                android:id="@+id/tv_phone_time2_pre"
                style="@style/Text_12sp_33"
                android:layout_alignTop="@id/tv_telNum2"
                android:layout_toRightOf="@id/tv_telNum2" />

            <com.ilife.iliferobot.view.LightTextView
                android:id="@+id/tv_phone_time2"
                style="@style/Text_12sp_33"
                android:layout_below="@id/tv_telNum2"
                android:layout_alignStart="@id/tv_telNum2"
                android:text="@string/help_aty_time1" />
        </RelativeLayout>

        <View style="@style/View_Line_Style" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:background="@color/white">

            <ImageView
                android:id="@+id/image_email"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_30"
                android:background="@drawable/n_icon_email" />

            <com.ilife.iliferobot.view.AvantGardTextView
                android:id="@+id/tv_email"
                style="@style/Text_14sp_33"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_toEndOf="@+id/image_email"
                android:text="support@iliferobot.com" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <com.ilife.iliferobot.view.RegularTextView
            style="@style/Text_16sp_33"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_30"
            android:text="@string/personal_aty_feedback"
            android:textColor="@color/color_33" />
    </RelativeLayout>

    <com.ilife.iliferobot.view.LightEditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_30"
        android:background="@drawable/feedback_et_bg"
        android:hint="@string/personal_input_email"
        android:includeFontPadding="false"
        android:inputType="textEmailAddress"
        android:paddingStart="@dimen/dp_18"
        android:textColorHint="@color/color_ac"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:id="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10">

        <com.ilife.iliferobot.view.LightEditText
            android:id="@+id/et_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/feedback_et_bg"
            android:focusable="false"
            android:hint="@string/personal_aty_chose_type"
            android:includeFontPadding="false"
            android:paddingStart="@dimen/dp_18"
            android:textColorHint="@color/color_ac"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <com.ilife.iliferobot.view.LightEditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_30"
        android:background="@drawable/feedback_et_bg"
        android:gravity="start"
        android:hint="@string/help_aty_content"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/dp_18"
        android:paddingTop="@dimen/dp_10"
        android:textColorHint="@color/color_ac"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <com.ilife.iliferobot.view.LightTextView
            android:id="@+id/tv_numbs"
            style="@style/Text_12sp_ac"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_35"
            android:text="@string/personal_aty_count" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_30"
        android:background="@drawable/feedback_et_bg"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_14">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_13">

            <com.ilife.iliferobot.view.LightTextView
                style="@style/Text_12sp_ac"
                android:text="@string/help_aty_add_pic" />

            <com.ilife.iliferobot.view.EnglishRegularTextView
                style="@style/Text_12sp_ac"
                android:layout_height="match_parent"
                android:text="@string/help_aty_add_pic1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_feed_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/image_add"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_marginStart="@dimen/dp_6"
                android:background="@drawable/n_icon_addpictures"
                android:scaleType="fitXY" />

        </LinearLayout>

    </LinearLayout>

    <com.ilife.iliferobot.view.ShadowContainer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_23"
        app:containerCornerRadius="@dimen/dp_25"
        app:containerDeltaLength="@dimen/dp_8"
        app:containerShadowColor="@color/color_f08300_66"
        app:containerShadowRadius="@dimen/dp_6"
        app:deltaY="@dimen/dp_2"
        app:enable="true">

        <com.ilife.iliferobot.view.RegularTextView
            android:id="@+id/bt_confirm"
            style="@style/Button_Style"
            android:text="@string/confirm" />
    </com.ilife.iliferobot.view.ShadowContainer>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:visibility="gone" />
</LinearLayout>