    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <com.ilife.iliferobot.view.RegularTextView
            style="@style/Text_16sp_33"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_30"
            android:text="@string/personal_aty_feedback"
            android:textColor="@color/color_33" />
    </RelativeLayout>

    <com.ilife.iliferobot.view.LightEditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_30"
        android:background="@drawable/feedback_et_bg"
        android:hint="@string/personal_input_email"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/dp_18"
        android:textColorHint="@color/color_ac"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:id="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10">

        <com.ilife.iliferobot.view.LightEditText
            android:id="@+id/et_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/feedback_et_bg"
            android:focusable="false"
            android:hint="@string/personal_aty_chose_type"
            android:includeFontPadding="false"
            android:paddingStart="@dimen/dp_18"
            android:textColorHint="@color/color_ac"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <com.ilife.iliferobot.view.LightEditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_30"
        android:background="@drawable/feedback_et_bg"
        android:gravity="start"
        android:hint="@string/help_aty_content"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/dp_18"
        android:paddingTop="@dimen/dp_10"
        android:textColorHint="@color/color_ac"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <com.ilife.iliferobot.view.LightTextView
            android:id="@+id/tv_numbs"
            style="@style/Text_12sp_ac"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_35"
            android:text="@string/personal_aty_count" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_30"
        android:background="@drawable/feedback_et_bg">

        <ImageView
            android:id="@+id/image_add"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_toEndOf="@+id/image_1"
            android:background="@drawable/n_icon_addpictures"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_toEndOf="@+id/image_add">

            <com.ilife.iliferobot.view.LightTextView
                style="@style/Text_12sp_ac"
                android:text="@string/help_aty_add_pic" />

            <com.ilife.iliferobot.view.EnglishRegularTextView
                style="@style/Text_12sp_ac"
                android:text="@string/help_aty_add_pic1" />
        </LinearLayout>

    </RelativeLayout>
       <com.ilife.iliferobot.view.ShadowContainer
           android:layout_marginTop="@dimen/dp_23"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:containerDeltaLength="@dimen/dp_8"
           app:containerCornerRadius="@dimen/dp_25"
           app:containerShadowRadius="@dimen/dp_6"
           app:deltaY="@dimen/dp_2"
           app:containerShadowColor="@color/color_f08300_66"
           app:enable="true">
        <com.ilife.iliferobot.view.RegularTextView
            android:id="@+id/bt_confirm"
            style="@style/Button_Style"
            android:text="@string/confirm" />
       </com.ilife.iliferobot.view.ShadowContainer>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:visibility="gone" />
</LinearLayout>