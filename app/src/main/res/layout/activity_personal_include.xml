<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ilife.iliferobot.view.RegularTextView
        style="@style/Text_16sp_33"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginStart="@dimen/dp_30"
        android:gravity="center_vertical"
        android:text="@string/personal_aty_support"
        android:textColor="@color/color_33" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_tel1"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_30"
            android:background="@drawable/n_icon_tel" />

        <com.ilife.iliferobot.view.AvantGardTextView
            android:id="@+id/tv_telNum1"
            style="@style/Text_14sp_33"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_toEndOf="@+id/image_tel1"
            android:text="400-963-8886" />

        <com.ilife.iliferobot.view.LightTextView
            style="@style/Text_12sp_33"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_toEndOf="@+id/tv_telNum1"
            android:text="@string/help_aty_time1" />
    </RelativeLayout>

    <View style="@style/View_Line_Style" />

