<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qr_code_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="vertical">

        <com.ilife.iliferobot_cn.view.RegularTextView
            style="@style/Text_14sp_33"
            android:layout_gravity="center_horizontal"
            android:text="@string/personal_acy_exit"
            android:layout_marginTop="@dimen/dp_23" />

        <com.ilife.iliferobot_cn.view.LightTextView
            style="@style/Text_12sp_ac"
            android:layout_gravity="center_horizontal"
            android:text="@string/personal_aty_exit_content"
            android:layout_marginTop="@dimen/dp_9" />
    </LinearLayout>

    <View
        style="@style/View_Line_Style"
        android:layout_marginStart="@dimen/dp_1"
        android:layout_marginEnd="@dimen/dp_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal">

        <com.ilife.iliferobot_cn.view.RegularTextView
            android:id="@+id/tv_cancel"
            style="@style/Text_dialog_cancel" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_e2"
            android:layout_marginBottom="@dimen/dp_2" />

        <com.ilife.iliferobot_cn.view.RegularTextView
            android:id="@+id/tv_exit"
            style="@style/Text_dialog_confirm"
            android:text="@string/personal_aty_exit" />
    </LinearLayout>
</LinearLayout>