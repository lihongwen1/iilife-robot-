<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView">
    <View
        style="@style/View_Line_Style"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white">
        <com.ilife.iliferobot_cn.view.LightTextView
            style="@style/Text_16sp_ac"
            android:id="@+id/tv_week"
            android:text="@string/clock_aty_sun"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_30"
            android:textColor="@drawable/clock_tv_color"/>
        <com.ilife.iliferobot_cn.view.LightTextView
            style="@style/Text_16sp_ac"
            android:id="@+id/tv_time"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_week"
            android:layout_toStartOf="@+id/image_status"
            android:layout_marginStart="@dimen/dp_25"
            android:text="00:00"
            android:textColor="@drawable/clock_tv_color"
            android:gravity="end"/>
        <ImageView
            android:id="@+id/image_status"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_22"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:background="@drawable/image_max_bg"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_25"/>
    </RelativeLayout>
</LinearLayout>