<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        style="@style/Aty_top_rl_bg">
        <ImageView
            android:id="@+id/image_back"
            style="@style/Image_Back_Style"/>
        <com.ilife.iliferobot_cn.view.RegularTextView
            android:id="@+id/tv_title"
            style="@style/Text_16sp_33"
            android:layout_centerInParent="true"
            android:text="@string/wifi_guide_aty_guide"/>
    </RelativeLayout>
    <View style="@style/View_Line_Style"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_400">
                <ImageView
                    android:layout_width="@dimen/dp_247"
                    android:layout_height="@dimen/dp_370"
                    android:background="@drawable/n_img_guide"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_23"/>
            </RelativeLayout>
            <com.ilife.iliferobot_cn.view.LightTextView
                style="@style/Text_12sp_33"
                android:id="@+id/tv_tip1"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30"
                android:text="@string/wifi_guide_aty_tip"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_24"
                android:orientation="horizontal">
                <com.ilife.iliferobot_cn.view.RegularButton
                    style="@style/Button_Style_Small"
                    android:id="@+id/bt_do"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_22"
                    android:text="@string/wifi_guide_aty_go" />
                <com.ilife.iliferobot_cn.view.RegularButton
                    style="@style/Button_Style_Small"
                    android:id="@+id/bt_done"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_22"
                    android:text="@string/wifi_guide_aty_done"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_30">
                <com.ilife.iliferobot_cn.view.LightTextView
                    style="@style/Text_12sp_8fc31f"
                    android:id="@+id/tv_tip2"
                    android:text="@string/wifi_guide_aty_tip2"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_centerHorizontal="true"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@+id/tv_tip2"
                    android:background="@color/color_8fc31f"
                    android:layout_alignStart="@+id/tv_tip2"
                    android:layout_alignEnd="@+id/tv_tip2"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>